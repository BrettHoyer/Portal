<%= form_for @rant, :html => {:multipart => true} do |f| %>
  <% if @rant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rant.errors.count, "error") %> prohibited this rant from being saved:</h2>

      <ul>
      <% @rant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :remote_image_url, "or image URL:" %><br />
    <%= f.file_field :remote_image_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
